# Local Development Environment Variables
# Copy this file to .env and update the values

# Database Configuration
# Option 1: Local PostgreSQL
DATABASE_URL=Host=localhost;Port=5432;Database=alisto_local;Username=postgres;Password=password

# Option 2: Hosted Database (Neon, Supabase, etc.)
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# JWT Configuration
JWT_ISSUER=https://settling-ant-32.clerk.accounts.dev

# Local File Upload Configuration
# Path where uploaded files will be stored (relative to project root)
FILE_UPLOAD_LOCAL_PATH=uploads
# Base URL for accessing uploaded files
FILE_UPLOAD_BASE_URL=/uploads
# Maximum file size in bytes (10MB default)
FILE_UPLOAD_MAX_FILE_SIZE=10485760

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Optional: Redis (if you want to add Redis later)
# REDIS_URL=redis://localhost:6379 